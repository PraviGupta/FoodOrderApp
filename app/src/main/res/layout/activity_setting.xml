<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:divider="?android:dividerHorizontal"
    android:showDividers="middle"
    android:orientation="vertical"
    tools:context=".SettingActivity">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Settings"

    android:textColor="#000000"
    android:layout_margin="20dp"
    android:layout_marginEnd="20dp"
    android:textSize="28sp"
    android:textStyle="bold"
    android:drawableEnd="@drawable/baseline_settings_24"
    />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:id="@+id/tvhome"
        android:text="HOME"
        android:drawableLeft="@drawable/baseline_home_24"
        android:textColor="#040404"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="ABOUT US"
        android:id="@+id/tvabout"
        android:drawableLeft="@drawable/baseline_about_24"
        android:textColor="#040404"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUPPORT"
        android:id="@+id/tvsupport"
        android:drawableLeft="@drawable/baseline_support_24"
        android:layout_margin="10dp"
        android:textColor="#040404"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CART"
        android:id="@+id/tvcart"
        android:layout_margin="10dp"
        android:textColor="#040404"
        android:drawableLeft="@drawable/baseline_shopping_cart_24"
        android:textSize="22sp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LOGOUT"
        android:id="@+id/tvlogout"
        android:drawableLeft="@drawable/baseline_shopping_cart_24"
        android:layout_margin="10dp"
        android:textColor="#040404"
        android:textSize="22sp"
        />

</LinearLayout>
</layout>